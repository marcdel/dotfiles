function! s:setProjections()
  let l:json = readfile($HOME."/.config/nvim/elixir-projections.json")
  let l:dict = projectionist#json_parse(l:json)
  call projectionist#append(getcwd(), l:dict)
endfunction

augroup elixir
  autocmd!
  " It would be nice to only load elixir projections for elixir files, but I
  " haven't been able to make this work
  " autocmd FileType elixir execute pathogen#interpose('bundle/vim-sexp')

  autocmd User ProjectionistDetect :call s:setProjections()
augroup end

