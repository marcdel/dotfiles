[user]
  name = Marc Delagrammatikas
  email = delagrammatikas@gmail.com
[push]
  default = current
[color]
  ui = auto
[interactive]
  singleKey = true
[alias]
  aa = add --all
  an = add -N .
  ap = add --patch
  br = branch
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  ci = commit -v
  co = checkout
  pf = push --force-with-lease
  st = status
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
[merge]
  ff = only
[fetch]
  prune = true
[rebase]
  autosquash = true
[diff]
  colorMoved = zebra
